<p id="notice"><%= notice %></p>

<h1>Jogos</h1>

<table class="table table-hover table-nonfluid">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jogos.each do |jogo| %>
      <tr>
        <td><%= jogo.nome %></td>
        <td class="text-center"><%= link_to '<span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>'.html_safe, jogo %></td>
        <td class="text-center"><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_jogo_path(jogo) %></td>
        <td class="text-center"><%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe, jogo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="tab">
<%= link_to '<span class="glyphicon glyphicon-home" aria-hidden="true"></span>'.html_safe, pages_home_path %>
  <span class="glyphicon glyphicon-option-vertical" aria-hidden="true"></span>
<%= link_to '<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>'.html_safe, new_jogo_path %>
</div>
